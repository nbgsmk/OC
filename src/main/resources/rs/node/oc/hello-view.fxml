      </VBox>
      <VBox GridPane.columnIndex="1">
         <children>
            <BorderPane>
               <center>
               		<LineChart fx:id="grafikoncicNum" BorderPane.alignment="CENTER">
               			<xAxis>
               				<CategoryAxis side="BOTTOM" />
               			</xAxis>
               			<yAxis>
               				<NumberAxis side="LEFT" />
               			</yAxis>
               		</LineChart>
               </center>
               <bottom>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                     		<Button mnemonicParsing="false" onAction="#dajRandomData" text="random data" />
                     		<Button onAction="#onHelloButtonClick" text="Hello!">
		</Button>
            
                           		<Label fx:id="welcomeLejbel" contentDisplay="RIGHT" text="klikni ispod" />
                     </children>
                  </HBox>
               </bottom>
            </BorderPane>
         </children>
